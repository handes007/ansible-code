pipeline{
     agent any

     stages{
        stage('zip the file'){
            steps{
                sh 'zip ansible-${BUILD_ID}.zip * --exclude jenkinsfile'
            }
        }
        stage('upload artifacts to jfrog'){
            steps{
                sh 'curl -u admin : password -T \
                 ansible-${BUILD_ID}.zip \
                 "http://100.25.161.151:8081/artifactory/ansible/ansible-${BUILD_ID}.zip"'
            }
        }
     }
    
}